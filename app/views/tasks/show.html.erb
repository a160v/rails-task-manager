<h1><%= @task.title %></h1>

<p class="well"><%= @task.details %></p>

<% if @task.completed %>
  <i class="fa-solid fa-square-check"></i> This task is completed
<% else %>
  <i class="fa-regular fa-square"></i> This task is not completed yet
<% end %>

<%= link_to edit_task_path(@task.id), class: 'pull-right btn btn-default' do %>
  <i class="fa fa-pencil"></i> Edit this task
<% end %>

<%= link_to task_path(@task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'pull-right btn btn-default' do %>
  <i class="fa-solid fa-trash"></i> Delete task
<% end %>

<hr>
<%= link_to tasks_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>
